<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     
             x:Class="XamarinEjemplo.Views.CrearColeccionPage">
    <ContentPage.Content>
        <StackLayout Spacing="40" Padding="40" VerticalOptions="Center">
            <Grid>
                
                    <Image Aspect="AspectFit" Source="foto.jpg"/>
                
            </Grid>
            <Entry Placeholder="Nombre Coleccion"
                                   Text="{Binding Nombre}"/>
            <Entry Placeholder="Detalle"
                                  Text="{Binding Detalle}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>