<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Crear Colección" 
             x:Class="XamarinEjemplo.Views.CrearColeccionPage">
    <ContentPage.Content>
        <StackLayout Spacing="30" Padding="30" VerticalOptions="Center">
            <Grid>
                
                    <Image Aspect="AspectFit" Source="foto.jpg" />
                
            </Grid>
            
            <Label Text="Nombre Colección" FontSize="Small"/>
            <Entry Text="{Binding PujaDesde}"/>

            <Label Text="Descripción" FontSize="Small"/>
            <Editor Text="{Binding Descripcion}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>